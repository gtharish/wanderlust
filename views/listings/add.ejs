<% layout("layouts/boilerplate") %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">

                <div class="card shadow-lg border-0">
                    <div class="card-header bg-success text-white text-center">
                        <h3>Add New Listing</h3>
                    </div>

                    <div class="card-body">

                        <form method="POST" action="/listings">

                            <div class="mb-3">
                                <label class="form-label">Title</label>
                                <input name="items[title]" type="text" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea name="items[description]" class="form-control" rows="4" required></textarea>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Price</label>
                                <input name="items[price]" type="number" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Country</label>
                                <input name="items[country]" type="text" class="form-control" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Image URL</label>
                                <input name="items[image]" type="text" class="form-control" required>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Location</label>
                                <input name="items[location]" type="text" class="form-control" required>
                            </div>

                            <button class="btn btn-success w-100 py-2 mt-3">
                                Create Listing
                            </button>

                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>